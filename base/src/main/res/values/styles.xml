<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    font style-->
    <style name="font_black">
        <item name="fontFamily">@font/poppins_black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="font_bold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="font_semi_bold">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="font_medium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="font_regular">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    style text-->
    <style name="st_text_400" parent="font_regular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="singleLine">true</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="st_text_500" parent="font_medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="st_text_600" parent="font_semi_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="singleLine">true</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="st_text_700" parent="font_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="singleLine">true</item>
    </style>
</resources>